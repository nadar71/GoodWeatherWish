<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">      @color/colorPrimary</item>
        <item name="colorPrimaryDark">  @color/colorPrimaryDark</item>
        <item name="colorAccent">       @color/colorAccent</item>
        <!-- settings preference theme -->
        <item name="preferenceTheme">   @style/PreferenceThemeOverlay</item>
    </style>

    <!-- forecast activity action bar styles -->
    <style name="ActionBar.Solid.WeatherApp.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">    useLogo|showHome</item>
        <item name="logo">              @drawable/ic_logo</item>
    </style>

    <!-- Style for MainActivity -->
    <style name="AppTheme.Forecast" parent="@style/AppTheme">
        <item name="actionBarStyle">    @style/ActionBar.Solid.WeatherApp.NoTitle</item>
    </style>

    <!-- DetailActivity labels style -->
    <style name="DetailLabel" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:layout_width">  wrap_content</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:textColor">     @color/detail_accent_label</item>
    </style>

    <!-- DetailActivity values style -->
    <style name="ExtraWeatherMeasurement" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">  wrap_content</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:textColor">     @android:color/white</item>
    </style>

</resources>
